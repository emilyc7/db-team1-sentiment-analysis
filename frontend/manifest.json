{
  "manifest_version": 2,
  "name": "proveMeWrong()",
  "version": "1.0",

  "description": "Sentiment analyser and stock informer.",
  "icons": {
	"19": "images/icons8-bonds-19.png",
     	"32": "images/icons8-bonds-32.png",
        "48": "images/icons8-bonds-48.png",
        "100": "images/icons8-bonds-100.png"
      	},

  "browser_action": {
  "default_popup": "popup.html"
   },

  "content_scripts": [{
    "matches" : ["<all_urls>"],
    "js" : [ "js/content.js" ]
  }],

  "permissions": ["tabs", "http://localhost:5000/*"],

 "background": {
            "scripts": ["js/backgrounds.js" ],
            "persistent": true
        }

}
